<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csia.controllers.Users_Controller">
   <children>
      <ListView fx:id="userListView" layoutX="42.0" layoutY="43.0" prefHeight="342.0" prefWidth="335.0" />
      <MenuButton fx:id="searchSelector" layoutX="472.0" layoutY="66.0" mnemonicParsing="false" text="MenuButton">
        <items>
          <MenuItem fx:id="idSelection" mnemonicParsing="false" onAction="#selectID" text="ID" />
          <MenuItem fx:id="nameSelection" mnemonicParsing="false" onAction="#selectName" text="Name" />
        </items>
      </MenuButton>
      <TextField fx:id="userSearch" layoutX="472.0" layoutY="31.0" prefHeight="26.0" prefWidth="103.0" />
      <Label layoutX="425.0" layoutY="35.0" text="Search:" />
       <Label fx:id="statusLabel" layoutX="421.0" layoutY="151.0" prefHeight="73.0" prefWidth="155.0" textAlignment="CENTER" textFill="RED" wrapText="true" />
      <Button fx:id="searchButton" layoutX="471.0" layoutY="102.0" mnemonicParsing="false" onAction="#onClickSearch" text="Search" />
       <Button fx:id="backButton" layoutX="544.0" layoutY="360.0" mnemonicParsing="false" onAction="#onClickGoBack" text="Back" />
   </children>
</AnchorPane>
