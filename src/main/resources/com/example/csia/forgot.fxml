<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csia.controllers.Forgot_Controller">
   <children>
      <Button fx:id="emailButton" layoutX="222.0" layoutY="182.0" mnemonicParsing="false" onAction="#onClickSendEmail" text="Send E-mail" />
      <Label layoutX="154.0" layoutY="157.0" text="Enter Email:" />
      <TextField fx:id="emailField" layoutX="222.0" layoutY="152.0" prefHeight="26.0" prefWidth="220.0" promptText="name@email.com" />
      <Label fx:id="statusLabel" layoutX="149.0" layoutY="270.0" prefHeight="17.0" prefWidth="398.0" textFill="RED" />
      <Button fx:id="loginButton" layoutX="472.0" layoutY="14.0" mnemonicParsing="false" onAction="#onClickSendToLogin" text="Go back to Login" />
   </children>
</AnchorPane>
