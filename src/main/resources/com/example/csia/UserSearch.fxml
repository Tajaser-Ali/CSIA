<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csia.controllers.UserSearch_Controller">
   <children>
      <TextField fx:id="chemicalSearch" layoutX="213.0" layoutY="151.0" />
      <Button fx:id="searchButton" layoutX="385.0" layoutY="151.0" mnemonicParsing="false" onAction="#onClickSearch" text="Search" />
      <Label fx:id="welcomeUser" layoutX="10.0" prefHeight="58.0" prefWidth="327.0">
         <font>
            <Font size="24.0" />
         </font>
      </Label>
      <Button fx:id="logoutButton" layoutX="538.0" layoutY="3.0" mnemonicParsing="false" onAction="#onClickLogout" text="Logout" />
      <MenuButton fx:id="searchSelector" layoutX="213.0" layoutY="188.0" mnemonicParsing="false" text="Search By:">
        <items>
            <MenuItem fx:id="hCodeSelection" mnemonicParsing="false" onAction="#selectHCode" text="H-Code" />
          <MenuItem fx:id="idSelection" mnemonicParsing="false" onAction="#selectID" text="ID" />
          <MenuItem fx:id="nameSelection" mnemonicParsing="false" onAction="#selectName" text="Name" />
        </items>
      </MenuButton>
      <Label layoutX="149.0" layoutY="156.0" prefHeight="17.0" prefWidth="60.0" text="Chemical:" />
   </children>
</AnchorPane>
